{
  "expo": {
    "name": "Gain Wellness",
    "slug": "MOVIL-APP",
    "version": "1.0.10",
    "orientation": "portrait",
    "icon": "./assets/images/apple.png",
    "scheme": "gain-wellness",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.franfi15.MOVILAPP",
      "buildNumber": "6",
      "infoPlist": {
        "NSCameraUsageDescription": "Esta app necesita acceso a la cámara para escanear el código QR de los socios en el check-in.",
        "NSUserNotificationsUsageDescription": "Usamos las notificaciones para avisarte sobre tus turnos, créditos, recordatorios importantes y novedades de la institución.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/android.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECEIVE_BOOT_COMPLETED" 
      ],
      "edgeToEdgeEnabled": true,
      "package": "com.franfi15.MOVILAPP",
      "googleServicesFile": "./google-services.json",
      "versionCode": 10
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/icono-noti.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/icono-noti-oscuro.png",
          "imageWidth": 300,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "image": "./assets/images/icono-noti.png",
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icono-noti.png",
          "color": "#ffffff"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Permitir que Gain Wellness acceda a tu cámara para escanear códigos QR."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "845415fc-0a51-4efe-b43f-4f39d43720d4"
      }
    }
  }
}
